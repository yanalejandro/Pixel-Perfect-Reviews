<section class="box p-1 m-6 has-background-primary">
    <header class="level is-mobile">
        <div class="level-item">
            <button class="button is-danger m-3" id="fav">Save to Favorites</button>
        </div>
        <a class="level-item has-text-centered title mt-5 has-text-white  is-size-1" href="/games/{{review.game_id}}"><h2 class="has-text-centered has-text-weight-bold" id="review-title" data-post="{{review.id}}">{{review.title}}</h2></a>
        <p class="level-item has-text-centered subtitle m-2 has-text-white">Created by: {{review.user.username}} {{review.date_posted}}</p>
    </header>
    <p class="p-5 container is-fullhd">{{review.review}}</p>
    <label class="checkbox level-item button is-danger m-3">
        <input class="title" type="checkbox" id="check" onclick="showForm()">
        + Add a Comment!
    </label>
</section>

<div class="box p-1 m-6 has-background-primary" id="hide">
    <h2 class="title p-2"></h2>
    <form class="p-5 m-0" id="comment-form">
        <div class="field">
            <label class="label" for="comment-text">Comment:</label>
            <textarea class="input" type="text" id="comment-text" ></textarea>
        </div>
        <div>
            <button class="button is-danger" type="submit">Submit</button>
        </div>
    </form>
</div>

{{!-- cycle through any comments --}}
<div>
    {{#each review.comments as |comment|}}
    {{> commentlist}}
    {{/each}}
</div>

<script src="../js/showForm.js"></script>
{{!-- script to go to create comment screen --}}
<script src="../js/comment.js"></script>
<script src="../js/favorites.js"></script>