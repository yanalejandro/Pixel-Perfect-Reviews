<div class="tile is-parent">
    <article class="tile is-child notification is-info">
        <a href="/games/{{game_id}}">
            <p class="title">{{title}}</p>
        </a>
        <a href="/reviews/{{id}}">
            <p>Go to Review Page</p>
        </a>
        {{#if recommendation}}
        <p>Recommend: Yes</p>
        {{else}}
        <p>Recommend: No</p>
        {{/if}}
        <p>{{review}}</p>
        <p>--{{user.username}} {{date_posted}}</p>
    </article>
</div>